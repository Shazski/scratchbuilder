<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      
        <!-- Font online-->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
      
<!--        Animate.css-->
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
                
                                
        <link rel="stylesheet" href="main.css" >
        
        <!-- Google JQuery CDN -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        
        <script src="form.js"></script>

    </head>
    <body>
        <div>
           <div class="panel shadow1">
                <form class="login-form" action="/signup" method="POST">
                    <div class="panel-switch animated fadeIn">
                        <button type="button" id="sign_up" class="active-button">Sign Up</button>
                    </div>
                    <h1 class="" id="title-signup">Welcome !</h1>
                    {{#if emailExits}}
                    <p>{{emailExits}}</p>
                    {{/if}}
                    
                    <fieldset id="signup-fieldset" >
                        <input class="form-control" name="firstname" type="textbox"  required   placeholder="Username" value="" >
                        <input class="form-control" name="email" type="email"  required   placeholder="Email" value="" >
                        <input class="form-control" name="password" type="password" placeholder="Choose password"  required  value="">
                    </fieldset>
                    <input type="submit" id="" class="btn btn-primary" style="margin-top: 20px;"  value="Sign up">
                    <p><a id="lost-password-link" href="/login" class="animated fadeIn animate5">Have an Acoount?</a></p>
                </form>
            </div>
        </div>
    </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
}

html{
    width: 100%;
    height: 100vh;
}

body {
    background-image:linear-gradient(to right,rgb(0, 0, 0),rgba(0, 0, 0, 0.73)),url(/pics/gaming-pc-03-17_01.jpg) ;
